<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        tools:context=".MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@color/backcolor"
        android:orientation="vertical"
        android:weightSum="10"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
    <TextView
        android:id="@+id/bufferText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAlignment="gravity"
        android:layout_gravity="right"
        android:gravity="right|bottom"
        android:text=""
        android:paddingRight="20dp"
        android:textSize="18dp"
        android:textColor="@color/smalltext"
        android:layout_weight="1"/>

        <TextView
            android:id="@+id/resul_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:textColor="@color/buttoncolor"
            android:textSize="28dp"
            android:text="0"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:textAlignment="gravity"

            />



            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="7.5"
                android:layout_margin="0dp"
                android:padding="10dp"
                android:rowCount="4"
                android:columnCount="4"
                android:useDefaultMargins="false"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="true"
                android:layout_gravity="center_vertical|center_horizontal">


        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical|center_horizontal">
            >
            <Button
                    android:id="@+id/number_btn7"
                     android:background="@color/buttoncolor"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="getValue"
                    android:text="7"/>
                <Button
                    android:id="@+id/number_btn8"
                    android:background="@color/buttoncolor"
                    style="@style/Widget.AppCompat.Button.Borderless"
                   android:textSize="22dp"
                     android:layout_margin=".1dp"
                     android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="getValue"
                    android:text="8"/>
                <Button
                    android:id="@+id/number_btn9"
                    android:background="@color/buttoncolor"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="getValue"
                    android:text="9"/>
                <Button
                    android:id="@+id/number_btn_div"
                    android:background="@color/optext"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="division"
                    android:text="/"/>
        </TableRow>
            <TableRow android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical|center_horizontal">
                >
                <Button
                    android:id="@+id/number_btn4"
                    android:background="@color/buttoncolor"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="getValue"
                    android:text="4"/>
                <Button
                    android:id="@+id/number_btn5"
                    android:background="@color/buttoncolor"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="getValue"
                    android:text="5"/>
                <Button
                    android:id="@+id/number_btn6"
                    android:background="@color/buttoncolor"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="getValue"
                    android:text="6"/>
                <Button
                    android:id="@+id/number_btn_mul"
                    android:background="@color/optext"
                     style="@style/Widget.AppCompat.Button.Borderless"
                     android:textSize="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="multiplication"
                    android:text="x"/>
            </TableRow>
            <TableRow  android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical|center_horizontal">
                >
                <Button
                    android:id="@+id/number_btn1"
                    android:background="@color/buttoncolor"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="getValue"
                    android:text="1"/>
                <Button
                    android:id="@+id/number_btn2"
                    android:background="@color/buttoncolor"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="getValue"
                    android:text="2"/>
                <Button
                    android:id="@+id/number_btn3"
                    android:background="@color/buttoncolor"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="getValue"
                    android:text="3"/>
                <Button
                    android:id="@+id/number_btn_minus"
                    android:background="@color/optext"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="subtraction"
                    android:paddingBottom="7dp"
                    android:text="_"/>
            </TableRow>

             <TableRow  android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 
                 android:gravity="center_horizontal"
                 android:layout_gravity="center_vertical|center_horizontal">
                 >
                <Button
                    android:id="@+id/number_btn0"
                    android:background="@color/buttoncolor"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="getValue"
                    android:text="0"/>
                <Button
                    android:id="@+id/number_btn_eql"
                    android:background="@color/optext"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="getFinalValue"
                    android:text="="/>
                <Button
                    android:id="@+id/number_btn_del"
                    android:background="@color/optext"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="clearAll"
                    android:text="C"/>
                <Button
                    android:id="@+id/number_btn_plus"
                    android:background="@color/optext"
                     style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="22dp"
                     android:layout_margin=".1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="addition"
                    android:text="+"/>
             </TableRow>

            <!-- <TextView
                    android:text="Email setup"
                    android:textSize="32dip"

                    android:layout_columnSpan="4"
                    android:layout_gravity="center_horizontal"
                    />-->
            </TableLayout>

    </LinearLayout>
